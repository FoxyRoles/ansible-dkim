AutoRestart             yes
AutoRestartRate         10/1h
Canonicalization        relaxed/relaxed
Domain                  *
ExternalIgnoreList      refile:{{ dkim_opendkim_config_dir }}/TrustedHosts
InternalHosts           refile:{{ dkim_opendkim_config_dir }}/TrustedHosts
LogWhy                  yes
Mode                    sv
PidFile                 {{  dkim_opendkim_run_dir }}/opendkim.pid
SignatureAlgorithm      rsa-sha256
Socket                  inet:12301@localhost
SoftwareHeader          no
SubDomains              no
Syslog                  yes
SyslogSuccess           yes
TrustAnchorFile         /usr/share/dns/root.key
UMask                   002
UserID                  {{ dkim_user }}:{{ dkim_group }}

{% if dkim_keyfile is defined and dkim_keyfile | count > 0 %}
KeyFile                 {{ dkim_keyfile }}
Selector                {{ dkim_selector }}
{% else %}
KeyTable                refile:{{ dkim_opendkim_config_dir }}/KeyTable
SigningTable            refile:{{ dkim_opendkim_config_dir }}/SigningTable
{% endif %}
{% if dkim_require_safe_keys is defined %}
dkim_require_safe_keys             {{ dkim_require_safe_keys }}
{% endif %}
ReportAddress           {{ dkim_admin_email }}
{% if dkim_nameservers is defined and dkim_nameservers | count > 0 %}
Nameservers             {{ dkim_nameservers }}
{% endif -%}

